{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": false,           // ✅ Loosen this
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting (relaxed) */
    "strict": false,                    // ✅ Turns off strict mode
    "noUnusedLocals": false,            // ✅ Suppress unused local vars
    "noUnusedParameters": false,        // ✅ Suppress unused function args
    "noFallthroughCasesInSwitch": false // ✅ Allow fallthrough in switch
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
